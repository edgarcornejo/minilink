/* Colores */
miniViolet = #950FFA
miniGreen = #B1BD44
miniYellow = #E2FA00
miniBlue = #0d4eff
minigreenOpaque = #777A56
minigreenDeep = #443252
miniWhite = #fefefe
miniBlack = #1a1f29

/* Body General */
body
  font-family "Atkinson Hyperlegible", sans-serif
  font-size 16px
  background miniWhite
  color minigreenDeep

/* Seleccion */
::selection
  background miniGreen
  text-shadow none

/* Enlaces */
a
  color minigreenOpaque
  font-weight 700
  transition 0.2s all ease-in
  &:hover
    color miniBlack

/* Component Header */
/* Menu de todas las páginas */
.main-navigation
  border-bottom solid 0.1vw minigreenOpaque
  width 100%
  background rgba(226, 250, 0, 0.8)
  padding 2vh 0 2vh 0
  backdrop-filter blur(8px)
  position fixed
  z-index 1

.wrapper-menu
  width 90%
  max-width 1920px
  margin 0 auto
  display flex
  align-items center
  justify-content space-between
  menu
    display flex
    align-items center
    gap 0 1vw
    li
      display flex
      gap 1vw
      align-items center
      outline solid 0.1vw minigreenOpaque
      padding 0.3vw
      border-radius 0.2vw
      &:hover [data-icon]
        color minigreenDeep
    svg
      width 1.4vw
      height auto
    [data-icon]
      color minigreenOpaque
    a
      font-size 1vw
      font-weight 400
      letter-spacing 1pt
      line-height 140%
      hyphens none
      height 100%
      width 100%

.logotipo
  img
    width auto
    height 2vw
  &:hover
    filter invert(1)

.input-menu,.open-menu,.closed-menu
  display none

.li-current
  color miniBlack !important
  font-weight 700 !important

/* Header Index */
.wrapper-header
  background miniYellow
  width 100%
  padding 14vh 0 4vw 0
  header
    width 90%
    max-width 1920px
    margin 0 auto
    display flex
    align-items center
    justify-content center
  img
    width 8vw
    padding-right 2vw
  div
    padding 2vh 0 2vh 2vw
    border-left solid 0.2vw miniBlack
  h2
    font-size 2vw
    font-weight 700
    line-height 100%
  h1
    font-size 1vw
    line-height 100%

/* Contenido de página */
main
  width 100%
  height auto
  margin 0 auto
  padding 4vh 0 4vh 0

/* Página Index */
/* Contenedor de articles */
.wrapper-articles
  width 90%
  max-width 1920px
  margin 0 auto
  article
    display flex
    align-items center
    justify-content center
    padding 2vw
    margin-bottom 4vh
    gap 2vw
    &:nth-child(even) div
      background rgba(0,0,0,0.2)
  header
    width 100%
    padding 1vw
    display flex
    align-items center
    padding 5vh 0 5vh 0
    backdrop-filter blur(8px)
  h2,h3
    font-size 2vw
    line-height 100%
    font-weight 700
    letter-spacing 1pt
    hyphens none
    padding 1vw
  div
    width 100%
    padding 1vw
    backdrop-filter blur(8px)
  p
    font-size 1.2vw
    line-height 120%
    hyphens none
    margin-bottom 1vw
  ul
    display flex
    flex-flow column wrap
    gap 1vw
    padding 1vw 0 1vw 0
  li
    font-size 1.2vw
    font-weight 700
    line-height 140%
    list-style disc
    hyphens none
    list-style-position inside
  strong
    font-weight 700

/* Paquetes */
#packs-content
  padding 2vh 0 4vh 0
  width 90%
  max-width 1920px
  margin 0 auto
  display flex
  flex-wrap wrap
  justify-content space-around
  gap 2vw
  .pack
    padding 2vw
    line-height 120%
    width 48%
    border-radius 0.2vw
    border solid 0.1vw minigreenOpaque
  h3,h4
    text-align center
    font-size 1.4vw
    font-weight 700
    text-transform uppercase
    letter-spacing 2pt
    margin-bottom 2vh
    line-height 140%
  h4
    font-size 1.2vw
    font-weight 400
  p
    font-size 1vw
    line-height 140%
    hyphens none
    padding 0.6vw 0 0.6vw 0
  ul
    padding 0.6vw 0 0.6vw 0
  li
    font-size 1vw
    line-height 160%
    hyphens none
    list-style-type disc
    list-style-position inside

.boton-pack
  font-size 1vw
  border-radius 0.2vw
  text-align center
  line-height 140%
  display block
  margin 1vw 0 1vw 0
  padding 0.4vw
  color miniBlack
  background miniYellow

/* Component Footer */
/* Aside y Footer */
.content-aside
  padding 4vh 0 4vh 0
  background miniYellow

.wrapper-content-aside
  width 90%
  max-width 1920px
  margin 0 auto
  display flex
  justify-content space-between
  .wrapper-ul
    width 30%
  h4
    font-size 1.4vw
    padding-bottom 0.8vw
    margin-bottom 1vw
    font-weight 700
    border-bottom solid 0.1vw minigreenOpaque
  ul
    display flex
    flex-direction column
    gap 1vw
  a
    font-size 1vw
    font-weight 400
    color minigreenDeep
    padding 0.4vw

#busqueda
  width 90%
  max-width 1920px
  padding 2rem 0 2rem 0
  margin 0 auto
  font-size 1vw
  h2
    text-transform uppercase
    text-align center
    font-size 1vw
    padding-bottom 1vw
    color miniBlue
  input
    height 2vw !important
    background white !important
    font-size 1vw !important
  button
    height 2vw !important
    background miniBlue

footer
  padding 4vh 0 4vh 0
  display flex
  justify-content center
  small
    text-align center
    font-size 1vw
  a
    display inline

/* Responsive Design */
@media screen and (max-width:1024px)
  /* Menu de todas las páginas */
  .main-navigation
    border-bottom solid 1px minigreenOpaque
    padding 1rem 0 1rem 0
  
  .wrapper-menu
    menu
      gap 1rem
      li
        gap 1rem
        outline solid 1px minigreenOpaque
        padding 0.5rem
        border-radius 3px
      svg
        width 48px
      a
        font-size 1em

  .logotipo
    img
      height 48px

  /* Header Index */
  .wrapper-header
    padding 120px 0 48px 0
    header
      flex-direction column
    img
      width 80px
      padding 1rem
    div
      padding 1rem
      border 0
      text-align center
    h2
      font-size 2em
    h1
      font-size 1em
  
  .content-aside
    padding 3rem 0 3rem

  .wrapper-content-aside
    h4
      font-size: 1.4em
      padding-bottom 0.6rem
      margin-bottom 1rem
      border-bottom solid 1px minigreenDeep
    a
      font-size 1em
      padding 0.4rem

  footer
    padding 2rem 0 2rem 0
    small
      font-size 1em
  
  /* Página Index */
  /* Contenedor de articles */
  .wrapper-articles
    h2,h3
      font-size 1.8em
      padding 0
    p
      font-size 1em
    ul
      padding 1rem 0 1rem 0
      gap 1rem
    li
      font-size 1em

  /* Paquetes */
  #packs-content
    h3,h4
      font-size 1.4em
    p
      font-size 1em
    li
      font-size 1em
  
  .boton-pack
    font-size 1em

  #busqueda
    font-size 1em
    h2
      font-size 1em
      padding-bottom 1rem
    input
      height 1.6rem !important
      font-size 1em !important
    button
      height 1.6rem !important

   
@media screen and (max-width:768px)
  .wrapper-menu
    svg
      width 48px
      height 48px
    menu
      display none
      li
        outline 0
        width 100%
        text-align center
        border-bottom solid 1px minigreenOpaque
      svg
        display none
      a
        font-size 1.4em
        padding 1rem 0 1rem 0
    .open-menu
      display block

  #menu:checked ~ .wrapper-menu
    .open-menu
      display none
    .closed-menu
      display block
    menu
      background miniYellow
      display flex
      width 100%
      background eWhite
      top 80px
      left 0
      flex-direction column
      position absolute
      padding 1rem 0 1rem 0

  .wrapper-content-aside
    flex-direction column
    justify-content center
    gap 2rem 0
    .wrapper-ul
      width 100%
      text-align center

  /* Paquetes */
  #packs-content
    .pack
      padding 2rem
      width 100%
  
  /* Contenedor de articles */
  .wrapper-articles
    article
      flex-wrap wrap
      padding 0
      margin-bottom 1rem
      gap 1rem
      &:nth-child(even) div
        background none
    header
      padding 1rem
    h2, h3
      text-align center
      width 100%

    
