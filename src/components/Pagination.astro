---
import { Icon } from "astro-icon/components";
const { prevURL, nextURL } = Astro.props;
---

<nav class="pagination">
  {
    prevURL && (
      <a href={prevURL} title="Atrás" class="anin-rapido">
        <Icon name="mdi:arrow-left-box" /> Atrás
      </a>
    )
  }
  {
    nextURL && (
      <a href={nextURL} title="Siguiente" class="anin-rapido">
        Siguiente <Icon name="mdi:arrow-right-bold-box" />
      </a>
    )
  }
</nav>
